{% liquid
  assign c = '{ "errors": {}, "valid": true }' | parse_json

  function c = 'modules/core/lib/validations/email', c: c, object: object, field_name: 'email', key: 'validation.email'

  graphql emails_count = 'modules/user/emails_count', email: object.email | dig: 'users', 'total_entries'
  if emails_count > 0
    include 'modules/core/lib/helpers/register_error', contract: c, field_name: 'email', key: 'app.errors.taken'
  endif

  function c = 'modules/core/lib/validations/presence', c: c, object: object, field_name: 'password', key: 'app.errors.blank'

  hash_assign object['valid'] = c.valid
  hash_assign object['errors'] = c.errors

  return object
%}
