{% comment %}
  Load a user's data.
  Params:
    - id: string
      the user's id
{% endcomment %}
{% liquid
  graphql users = 'modules/user/load', id: id
  assign user = users.users.results.first
  if user
    assign params = '{}' | parse_json | hash_merge: user: user
    function results = 'modules/hook/fire', hook: 'user_load', params: params
    hash_assign user['hook_results'] = results
  endif
  return user
%}
