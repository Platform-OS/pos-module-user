---
slug: sessions/destroy
---
{% liquid
  function current_user = 'modules/user/lib/queries/user/current'
  include 'modules/permission/lib/helpers/can_do_or_unauthorized', requester: current_user, do: 'sessions.destroy'

  function res = 'modules/user/lib/commands/session/destroy'
  assign redirect_path = res.hook_results.redirect_to | default: params.redirect_to | default: '/'
  redirect_to redirect_path
%}
