{% liquid
  function current_profile = 'modules/user/helpers/current_profile'
  if current_profile.user.id == null or current_profile.otp_configured != true
    redirect_to '/'
  endif

  function user_otp = 'modules/user/queries/user/otp', email: current_profile.user.email
  render 'modules/user/2fa/disable', otp: user_otp.otp
%}
