{% comment %}
  Gets roles and permissions matrix.
{% endcomment %}
{% liquid
  function roles = 'modules/user/queries/role_permissions/permissions'
  function default_roles = 'modules/user/queries/role_permissions/get_defaults'

  unless roles['authenticated']
    hash_assign roles['authenticated'] = default_roles['authenticated']
  endunless
  unless roles['anonymous']
    hash_assign roles['anonymous'] = default_roles['anonymous']
  endunless

  hash_assign roles['superadmin'] = default_roles['superadmin']

  return roles
%}
