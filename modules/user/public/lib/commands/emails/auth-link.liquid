---
metadata:
  parameters:
    object:
    - url
    - email
    - id
---
{% parse_json object %}
  {
    "to": {{ object.email | json }},
    "from": {% print 'app.from_email' | t | json %},
    "subject": {% print 'app.emails.passwords.reset.subject' | t | json %},
    "partial": "modules/user/emails/passwords/reset",
    "layout": null,
    "data": {
      "url": {% print object.url | json %},
      "user": {
        "id": {% print object.id | json %}
      }
    }
  }
{% endparse_json %}

{% liquid
  function object = 'modules/core/commands/email/send', object: object
  return object
%}
